<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Mandi Crop Price"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="402dp"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7">

            <TextView
                android:id="@+id/report_date_label"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="8dp"
                android:text="Report Date"
                android:textColorLink="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/report_date"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginEnd="30dp"
                android:background="#FDF6FE"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="8dp"
                android:text="Select Date"
                android:textColor="#000000"
                android:textSize="16dp"
                app:drawableEndCompat="@android:drawable/ic_menu_edit" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="397dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toBottomOf="@id/tableRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/mandi_name_label"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Mandi Name"
                android:textColorLink="#101010"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/mandi_name"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginEnd="30dp"
                android:dropDownWidth="wrap_content"
                android:entries="@array/mandi_names"
                android:minWidth="3dp"
                android:padding="8dp"
                android:textAlignment="viewStart" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="402dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@id/tableRow2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/crop_label"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Crop  Name"
                android:textColorLink="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/crop"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginEnd="30dp"
                android:entries="@array/crop_names"
                android:minWidth="3dp"
                android:padding="8dp"
                android:textAlignment="textStart" />
        </TableRow>

        <Button
            android:id="@+id/btn_fetch_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:enabled="true"
            android:padding="8dp"
            android:text="Fetch Data"
            app:layout_constraintTop_toBottomOf="@id/tableRow3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_fetch_data"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_mandi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linear_layout_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="vertical"
                android:padding="16dp" />
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_mandi"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:itemIconTint="@color/bottom_nav_icon_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
