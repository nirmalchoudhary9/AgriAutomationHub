<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="16dp"
        android:paddingBottom="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Weather Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/weather_gradient"
                android:layout_margin="14dp"
                android:elevation="4dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/weather_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City, Date"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weather_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Info"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Section Title -->
            <TextView
                android:id="@+id/tv_smart_support_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Support"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Grid of Services -->
            <GridLayout
                android:id="@+id/grid_smart_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Auto Irrigation -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_auto_irrigation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Irrigation"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Disease Detection -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_crop_disease" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disease Detection"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Crop Recommendation -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_recommender" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Recommender"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Selling Price Calculator -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_sell_price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Selling Price Calculator"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- News -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_news" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Mandi View -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/ic_mandi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mandi View"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChatBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chatbot"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_main"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
