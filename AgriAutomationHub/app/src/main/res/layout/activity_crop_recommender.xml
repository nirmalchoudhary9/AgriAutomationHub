<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:text="Enter data in input field to get Recommendation -"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <TableRow
            android:id="@+id/row_nitrogen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/nitrogen"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Nitrogen(N)" />

            <EditText
                android:id="@+id/N_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter Nitrogen level" />

        </TableRow>

        <TableRow
            android:id="@+id/row_phosphorus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_nitrogen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/phosphorus"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Phosphorus(P)"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/P_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter Phosphorus level" />
        </TableRow>

        <TableRow
            android:id="@+id/row_potassium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_phosphorus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/potassium"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Potassium(K)"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/K_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter Potassium level" />
        </TableRow>

        <TableRow
            android:id="@+id/row_temprature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_potassium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/temprature"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Temprature"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/temprature_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter Temprature level" />
        </TableRow>

        <TableRow
            android:id="@+id/row_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_temprature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/humidity"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/humidity_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Humidity level"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/row_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_humidity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/ph"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="pH"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/ph_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter pH level" />
        </TableRow>

        <TableRow
            android:id="@+id/row_rainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_ph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/rainfall"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Rainfall"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/rainfall_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="Enter Rainfall level" />
        </TableRow>

        <Button
            android:id="@+id/recommender_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Recommendation"
            app:layout_constraintTop_toBottomOf="@id/row_rainfall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/output_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendation will be displayed here"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recommender_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/get_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Details about Crop"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/output_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
